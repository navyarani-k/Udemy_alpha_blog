<h2 class= "text-center mt-4">Create a new category </h2>
  
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 rounded page-bgcolor", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name,"Category name", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-info btn-lg" %>
        </div>
      <% end %>
    </div>
      <div class="mb-3">
        <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-secondary" %>
      </div>
  </div>
</div>